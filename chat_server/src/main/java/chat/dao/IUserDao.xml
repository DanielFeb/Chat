<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="chat.dao.IUserDao">
    <insert id="create" parameterType="chat.model.User" useGeneratedKeys="true" keyProperty="userID">
        INSERT INTO user
        (Nickname,
        Password,
        IconUrl,
        RealName,
        Phone,
        Address,
        Email)
        VALUES
        (#{nickname},
        #{password},
        #{iconUrl},
        #{realName},
        #{phone},
        #{address},
        #{email});
    </insert>

    <select id="getByID" resultType="chat.model.User" >
        SELECT * FROM user WHERE UserID = #{userID};
    </select>

    <select id="selectPw" resultType="String">
        SELECT Password FROM chat.user WHERE UserID = #{userID};
    </select>
</mapper>

